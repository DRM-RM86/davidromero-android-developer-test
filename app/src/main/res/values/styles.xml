<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Simple Alert Dialog -->
    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorTranslucentBlack</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/colorTranslucentBlack</item>
    </style>
    <!-- Dialogs style's -->
    <style name="TransparentDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorTranslucentBlack</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewContent" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <style name="TextViewTitleBold" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_size_big2</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>